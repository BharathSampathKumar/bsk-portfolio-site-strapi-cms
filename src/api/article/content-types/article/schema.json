{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 25,
      "maxLength": 50,
      "required": true
    },
    "breadcrumbText": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "required": true
    },
    "shortDesc": {
      "type": "string",
      "minLength": 20,
      "maxLength": 70,
      "required": true
    },
    "fullDesc": {
      "type": "text",
      "minLength": 30,
      "maxLength": 150,
      "required": true
    },
    "isPublished": {
      "type": "boolean"
    },
    "publishedOn": {
      "type": "date",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isPublished"
            },
            true
          ]
        }
      },
      "required": true
    },
    "Metadata": {
      "type": "component",
      "component": "seo.page-metadata",
      "repeatable": false,
      "min": 0
    },
    "Tag": {
      "type": "component",
      "component": "metadata.content-tag",
      "repeatable": true
    },
    "content": {
      "type": "blocks",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isPublished"
            },
            true
          ]
        }
      }
    }
  }
}
